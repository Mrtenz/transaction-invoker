  "main": "index.js",
  "repository": "https://github.com/Mrtenz/transaction-invoker",
  "author": "Maarten Zuidhoorn <maarten@zuidhoorn.com>",
  "license": "MIT",
  "devDependencies": {
    "@ethersproject/abi": "^5.1.2",
    "@ethersproject/bytes": "^5.1.0",
    "@ethersproject/providers": "^5.1.2",
    "@ethersproject/signing-key": "^5.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.3",
    "@types/rimraf": "^3.0.0",
    "eip-712": "^0.4.3",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "hardhat-typechain": "^0.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "solhint": "^3.3.4",
    "ts-generator": "^0.1.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "test": "ts-ndoe scripts/run-tests",
    "sign": "ts-node scripts/sign",
    "format": "prettier --write --ignore-path .gitignore '**/*.{ts,tsx,js,json,yml,sol}'",
    "lint": "yarn lint:contracts && yarn lint:format",
    "lint:contracts": "solhint \"contracts/**/*\"",
    "lint:format": "prettier --check --ignore-path .gitignore \"**/*.{ts,tsx,js,json,yml,sol}\"",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,yml,sol}": [
      "prettier --write"
    ],
    "*.sol": [
      "solhint"
    ]
  }
}
